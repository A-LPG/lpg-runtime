<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>lpg.runtime</artifactId>
	<packaging>eclipse-plugin</packaging>
	<description>LPG Java runtime</description>
	<url>https://github.com/metaborg/lpg-runtime</url>

	<parent>
		<groupId>org.metaborg</groupId>
		<artifactId>org.metaborg.maven.parent.plugin</artifactId>
		<version>1.2.0-SNAPSHOT</version>
		<relativePath>../spoofax-deploy/org.metaborg.maven.parent.plugin</relativePath>
	</parent>

	<build>
		<sourceDirectory>src</sourceDirectory>
		<plugins>
			<!-- Reference install and deploy plugin to use settings from parent POM. -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-deploy-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-install-plugin</artifactId>
			</plugin>
		</plugins>
	</build>

	<developers>
	</developers>

	<scm>
		<connection>scm:git:git@github.com:metaborg/lpg-runtime.git</connection>
		<developerConnection>scm:git:git@github.com:metaborg/lpg-runtime.git</developerConnection>
		<url>https://github.com/metaborg/lpg-runtime</url>
	</scm>
</project>
